<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FarmaciaIntegral</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmaciaIntegral.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
    <div class="row vh-100">
            <nav id="sidebar" class="col-md-3 col-lg-2 bg-dark sidebar m-0">
                <div class="position-sticky" style="height: 100vh; overflow-y: hidden;">
                    <div class="text-center mt-5">
                        <h3 class="text-white">Farmacia Integral</h3>
                        <img src="img/logo.png" alt="" class="img-fluid my-5">
                    </div>
                    <ul class="navbar-nav flex-grow-1 d-flex flex-column justify-content-center align-items-center mt-3">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-file"></i> Reporte
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-box"></i> Inventario
                            </a>
                        </li>                  
                         <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-cogs"></i> Configuración
                            </a>
                        </li>
                    </ul>
                    <div class="position-absolute bottom-0 start-50 translate-middle-x pb-5">
                        <button class="btn btn-lg btn-custom-background">
                            <i class="fas fa-sign-out-alt"></i> Salir
                        </button>
                    </div>

                </div>
            </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            @RenderBody()
        </main>
    </div>
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
